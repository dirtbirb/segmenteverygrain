#:kivy 2.3.1

<Row@BoxLayout>:
    orientation: 'horizontal'
    size_hint_y: None
    height: 30

<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: 'vertical'
        FileChooserListView:
            id: filechooser
            path: '.'
        Row:
            Button:
                text: 'Cancel'
                on_release: root.cancel()
            Button:
                text: 'Load'
                on_release: root.load(filechooser.path, filechooser.selection[0])

<SaveDialog>:
    text_input: text_input
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: 'vertical'
        FileChooserListView:
            id: filechooser
            path: '.'
            on_selection: text_input.text = self.selection and self.selection[0] or ''
        TextInput:
            id: text_input
            size_hint_y: None
            height: 30
            multiline: False
        Row:
            Button:
                text: 'Cancel'
                on_release: root.cancel()

            Button:
                text: 'Save'
                on_release: root.save(filechooser.path, text_input.text)

<RootLayout>
    orientation: 'vertical'
    Row:
        Label:
            text: 'GrainTrainer2025'
    Row:
        Button:
            text: 'Load Unet model'
            on_release: root.show_load_unet()
        Label:
            text: root.unet_fn
    Row:
        Button:
            text: 'Load image'
            on_release: root.show_load_image()
        Label:
            text: root.image_fn
    Row:
        height: 60
        Button:
            text: 'Load data'
            on_release: root.show_load_data()
        Label:
            text: f'Grains: {root.grains_fn}\nData: {root.summary_fn}'
    Row:
        Label:
            text: 'Segmentation'
    Row:
        height: 60
        Button:
            text: 'Auto'
            disabled: root.unet_model is None or root.image is None
            on_release: root.auto_segment()
        Button:
            text: 'Manual'
            disabled: root.unet_model is None or root.image is None or len(root.grains) == 0 or len(root.grains) != len(root.summary)  
            on_release: root.manual_segment()

